{
  "name": "ecc-gui",
  "version": "2.0.0-1",
  "description": "This is the electron GUI alternative to the traditional in wallet gui for E-Currency Coins",
  "main": "index.js",
  "repository": "https://github.com/Greg-Griffith/Electron-Ecc-gui.git",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "postinstall": "gulp src",
    "dev": "electron . & gulp watch",
    "dist": "electron-builder -m zip -l zip -w zip"
  },
  "build": {
    "appId": "io.cryptounited.ecc-gui",
    "productName": "ECC Wallet",
    "directories": {
      "buildResources": "assets/icons",
      "output": "target"
    }
  },
  "dependencies": {
    "angular": "^1.6.4",
    "angular-ui-router": "^1.0.3",
    "bitcoin-core": "^1.2.0",
    "bitcoin-promise": "^1.3.1",
    "request": "^2.81.0",
    "request-promise-native": "^1.0.4"
  },
  "devDependencies": {
    "add-stream": "^1.0.0",
    "electron": "^1.6.11",
    "electron-builder": "^19.7.1",
    "eslint": "^4.0.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.3.0",
    "gulp": "^3.9.1",
    "gulp-angular-templatecache": "^2.0.0",
    "gulp-clean-css": "^3.4.1",
    "gulp-concat": "^2.6.1",
    "gulp-load-plugins": "^1.5.0",
    "gulp-ng-annotate": "^2.0.0",
    "gulp-plumber": "^1.1.0",
    "gulp-sass": "^3.1.0",
    "mocha": "^3.4.2"
  }
}
